@using Demo.Pl.View_Model.Departments
@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit department</h1>
    <form method="post" asp-controller="Department" asp-action="Edit">
        <div asp-validation-summary="All"></div>
        <div class="form-group mb-3">
            @* <label class="form-label" for="Code">Code</label> *@
            @* <input id="Code" name="Code" type="text" /> *@
            <label class="form-label " asp-for="Code">Code</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label class="form-label " asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>@*Name Is Reqired*@

        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Description">Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label " asp-for="CreationDate">CreationDate</label>
            <input type="date" asp-for="CreationDate" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Edit" class="btn btn-outline-dark"> Back to list</a>
        </div>
    </form>
</div>

